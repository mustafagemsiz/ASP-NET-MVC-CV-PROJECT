@using CV_PROJECT.Models.Entity;
@model List<TBL_SOSYALMEDYA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Sosyal Medya Listesi</h2>
<hr />
<table class="myList table table-bordered">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Bağlantı</th>
            <th scope="col">Durum</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        <asp:Repeater ID="Repeater1" runat="server">
            <ItemTemplate>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AD</td>
                        <td>@item.LINK</td>

                        @if (item.DURUM == true)
                        {
                            <td>Aktif</td>
                        }
                        else
                        {
                            <td>Pasif</td>
                        }
                        <td align="center">
                            <a href="/SosyalMedya/SosyalMedyaGetir/@item.ID" class="btn btn-warning" style="margin-bottom:4px">Düzenle</a>
                            <a href="/SosyalMedya/SosyalMedyaSil/@item.ID" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </ItemTemplate>
        </asp:Repeater>
    </tbody>
</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Ekle</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Sosyal Medya Ekleme</h2>
            </div>
            <form action="/SosyalMedya/SosyalMedyaEkle" method="post">
                <div class="modal-body">
                    <label>Sosyal Medya Ad</label>
                    <input type="text" name="AD" value="" class="form-control" />
                    <br />
                    <label>Sosyal Medya Bağlantısı</label>
                    <input type="text" name="LINK" value="" class="form-control" />
                    <br />
                    <label>Sosyal Medya Simge</label>
                    <input type="text" name="IKON" value="" class="form-control" />
                    <br />
                    <button class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>


