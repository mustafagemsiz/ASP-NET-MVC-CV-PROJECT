@using CV_PROJECT.Models.Entity
@model List<TBL_HOBI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hobi Listesi</h2>
<hr />
<table class="myList table table-bordered">
    <thead>
        <tr>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        <asp:Repeater ID="Repeater1" runat="server">
            <ItemTemplate>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ACIKLAMA1</td>
                        <td>@item.ACIKLAMA2</td>
                        <td>
                            <a href="/Hobi/HobiGetir/@item.ID" class="btn btn-warning" style="margin-bottom:4px">Düzenle</a>
                        </td>
                    </tr>
                }
            </ItemTemplate>
        </asp:Repeater>
    </tbody>
</table>
